{
  "name": "entity-form",
  "private": true,
  "version": "0.0.1",
  "description": "Make Form easy",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*",
      "website"
    ]
  },
  "scripts": {
    "dev": "lerna run --parallel --stream dev",
    "test": "lerna run --parallel --stream test",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "publish": "lerna publish --force-publish=*"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/.history/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forsigner/entity-form.git"
  },
  "author": "@forsigner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/forsigner/entity-form/issues"
  },
  "homepage": "https://github.com/forsigner/entity-form#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.14",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  }
}